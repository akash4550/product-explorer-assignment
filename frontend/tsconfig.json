{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,           // Next.js handles the output, not tsc
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Better for modern Next.js
    "resolveJsonModule": true,     // Allows importing .json files directly
    "isolatedModules": true,
    "jsx": "preserve",             // Next.js handles the JSX transformation
    "incremental": true,           // Speeds up subsequent builds
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]               // Optional: Allows imports like '@/components/...'
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}